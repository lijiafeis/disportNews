<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D43D3D"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/home_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/drawer3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/news"
            android:layout_marginBottom="10dp"
            android:textColor="#FDF2F2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="趣图" 
            android:layout_marginTop="6dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <RadioGroup
        android:id="@+id/home_radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F5F6"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radio_button_news"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/home_news"
            android:textColor="@drawable/home_guide_button" />

        <RadioButton
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radio_button_play"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/home_play"
            android:textColor="@drawable/home_guide_button" />

        <RadioButton
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radio_button_utils"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/home_utils"
            android:textColor="@drawable/home_guide_button" />

        <RadioButton
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radio_button_setting"
            android:gravity="center"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:text="@string/home_setting"
            android:textColor="@drawable/home_guide_button" />
    </RadioGroup>

</LinearLayout>